{
  "include": ["**/*.js"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2021", "DOM"],
    "target": "ES2021",
    "module": "es2022",
    "baseUrl": ".",
    "paths": {
      "@web3-storage/autobahn-core/*": ["../core/src/*"]
    }
  }
}
